    name: "statslog_statsd.h",
    tools: ["stats-log-api-gen"],
    cmd: "$(location stats-log-api-gen) " +
        "--header $(genDir)/statslog_statsd.h " +
        "--module statsd " +
        "--namespace android,os,statsd,util",
